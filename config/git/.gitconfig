[advice]
  skippedCherryPicks = false

[alias]
  # Branch Management
  b = branch
  ba = branch -a
  bc = switch -c
  bd = branch -D
  bl = branch -l
  br = branch -r
  bs = switch

  # Commits & Rewrites
  amend = commit --amend --no-edit
  cam = commit -am
  cm = commit -m
  cp = cherry-pick

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  rbs = rebase --skip

  r = reset
  rh = reset --hard
  rs = reset --soft

  # Inspect & History
  d = diff
  dn = diff --name-only
  dns = diff --staged --name-only
  ds = diff --staged
  lg = log --oneline --graph --pretty=custom
  lga = log --oneline --graph --all --pretty=custom

  # Remote & Sync
  f = fetch
  fo = fetch origin
  pfl = push --force-with-lease
  po = pull origin
  rpo = remote prune origin

  # Stash
  st = stash
  std = stash drop
  stl = stash list
  stp = stash pop

  # Working Tree & Index
  bb = restore  # this is a shorthand for "bring back" to not confuse with reset
  bbs = restore --staged
  cd = clean -d
  cf = clean -f
  cfd = clean -fd
  s = status
  ss = status --short

[color "branch"]
  current = bold yellow

[fetch]
  prune = true
  pruneTags = true

[help]
  autoCorrect = prompt

[init]
  defaultBranch = master

[include]
  path = ~/.gitconfig.local

[pretty]
  custom = %C(cyan)%h%C(reset) - %C(green)(%ar)%C(reset) %s %C(blue)[%an]%C(reset) %C(yellow)%D%C(reset)

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  autoStash = true
