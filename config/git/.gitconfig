[advice]
  skippedCherryPicks = false

[alias]
  # Staging & Restore
  a = add
  undo = restore
  unstage = restore --staged

  # Commit
  cm = commit -m
  cma = commit -am
  cp = cherry-pick
  fix = commit --amend --no-edit

  # Branch management
  br = branch
  del = branch -D
  s = switch
  sc = switch -c

  # Stash
  sd = stash drop
  sl = stash list
  sp = stash pop

  # Diff & Log
  d = diff
  dn = diff --name-only
  dns = diff --staged --name-only
  ds = diff --staged
  lg = log --oneline --graph --pretty=custom
  lga = log --oneline --graph --all --pretty=custom

  # Reset
  r = reset
  rh = reset --hard
  rs = reset --soft

  # Remote & Push/Pull
  pf = push --force-with-lease
  po = pull origin
  rpo = remote prune origin

  # Status & Clean
  cd = clean -d
  cf = clean -f
  cfd = clean -fd
  st = status
  sts = status --short

  # Rebase
  rb = rebase
  rbi = rebase -i

[color "branch"]
  current = bold yellow

[fetch]
  prune = true
  pruneTags = true

[help]
  autoCorrect = prompt

[init]
  defaultBranch = master

[pretty]
  custom = %C(cyan)%h%C(reset) - %C(green)(%ar)%C(reset) %s %C(blue)[%an]%C(reset) %C(yellow)%D%C(reset)

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  autoStash = true
